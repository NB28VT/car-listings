<h1>Manufacturers</h1>

<% if @manufacturer.errors.any? %>
  <h2>ERROR!</h2>
  <ul>
    <% @manufacturer.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @manufacturer do |f| %>

  <%= f.label :name, "Manufacturer Name" %>
  <%= f.text_field :name %>

  <%= f.label :country, "Manufacturer Country" %>
  <%= f.text_field :country %>

  <%= f.submit "Add manufacturer" %>
<% end %>
